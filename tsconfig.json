{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["src/**/*", "tests/**/*"],
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "commonjs",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist" 
  }
}